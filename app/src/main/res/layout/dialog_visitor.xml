<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="visitor"
            type="com.wallpad.notice.view.visitor.VisitorDialogViewModel" />
        <variable
            name="view"
            type="com.wallpad.notice.view.visitor.VisitorDialog" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_back">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            app:text="@{visitor.place}"
            android:textColor="@color/dialog_font"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="24dp"
            android:text="@{visitor.date}"
            android:textColor="@color/dialog_font"
            android:textSize="23sp"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="600dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:onClick="@{()->view.onClickClose()}"
            android:src="@drawable/btn_ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout8"
            android:layout_width="652dp"
            android:layout_height="1dp"
            android:layout_marginTop="75dp"
            android:alpha="0.1"
            android:background="@color/dialog_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="600dp"
            android:layout_height="340dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="26dp"
            android:background="#666666"
            app:thumbnail="@{visitor.isMedia?null:visitor.screen}"
            app:goneUnless="@{!visitor.isMedia}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="600dp"
            android:layout_height="340dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="26dp"
            app:goneUnless="@{visitor.isMedia}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="74dp"
            android:src="@drawable/btn_play_pause_nor"
            android:onClick="@{()->view.onClickPlayPause()}"
            app:goneUnless="@{visitor.isMedia&amp;&amp;visitor.isPrepare}"
            app:layout_constraintBottom_toBottomOf="@+id/surface"
            app:layout_constraintEnd_toEndOf="@+id/surface" />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/btn_play_stop_nor"
            android:onClick="@{()->view.onClickStop()}"
            app:goneUnless="@{visitor.isMedia&amp;&amp;visitor.isPrepare}"
            app:layout_constraintBottom_toBottomOf="@+id/surface"
            app:layout_constraintEnd_toEndOf="@+id/surface" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="652dp"
            android:layout_height="64dp"
            android:layout_marginTop="470dp"
            android:background="@color/dialog_font_0_1_5"
            android:gravity="center"
            android:onClick="@{()->view.onClickDelete()}"
            android:text="@string/STR_DELETE"
            android:textColor="@color/dialog_font"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>